@import nib
global-reset()

$body-color = #252525
$body-bg-color = #fefefe
$a-color = #000a96
$a-color-hover = #83a599

$button-background-color = #353535

$pastell-color-1 = #ffff7c
$pastell-color-2 = #ff6385
$pastell-color-3 = #00ef91

@font-face
  font-family Ubuntu
  font-style normal
  src url(/font/Ubuntu-C.woff)

@font-face
  font-family Ubuntu
  font-style italic
  src url(/font/Ubuntu-LI.woff)

/* sanity */
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  box-sizing border-box

html,
body
  display inline-block
  left 0
  min-height 100%
  position absolute
  top 0
  width 100%

body
  background-color $body-bg-color
  color $body-color
  font-family Ubuntu, sans-serif
  font-size 14px
  line-height 1

a
  color $a-color
  text-decoration none

  &:hover
    color $a-color-hover

h1
  font-size 6.5em
  text-transform uppercase
  padding 0 0 1em

h2
  font-size 2em
  text-transform uppercase

h3
  font-size 1.7em

h4
  font-size 1em
  font-style italic
  margin 1em 0 .3em

footer.menu
  position fixed
  right 2px
  top 2px

h1,
h2
  font-family Ubuntu, sans-serif

h3,
a
  font-family Ubuntu, sans-serif
  font-style italic

header.main,
footer.main
  display block
  height 100vh
  max-width 100%
  position relative
  width 100vw

header.main
  display inline-block
  text-align center
  height auto

  div
    display inline-block
    margin 0 auto

  img
    max-height 100vh
    display block
    margin 0 auto
    max-width 90%

  h1
    text-align left
    color $body-color
    margin -3em auto 0
    max-width 80%

  div.description
    display block
    font-size 2em
    font-style italic
    line-height 1.2em
    margin 2em auto
    max-width 80%
    text-align center

    p
      margin 0 0 .5em

footer.main
  font-style italic
  text-align center

  .content
    display inline-block
    padding 8em 0 0
    text-align right

  .copy
    bottom 5px
    position absolute
    text-align center
    width 100%

#wrapper
  background-image url(/img/header-bg.jpg)
  background-size cover

#logo
  border-bottom-color transparent
  border-left-color #ddd
  border-right-color transparent
  border-style solid
  border-top-color #ddd
  border-width 40px
  left 0
  position fixed
  top 0
  z-index 2

  img
    height 30px
    left -35px
    position absolute
    top -35px

section
  display inline-flex
  width 100vw
  max-width 100%
  text-align center
  padding 3em 0

  // &.image
  //   &.color-1
  //     background-color $pastell-color-1
  //   &.color-2
  //     background-color $pastell-color-3
  //   &.color-3
  //     background-color $pastell-color-2
  //   &.color-4
  //     background-color $pastell-color-4

  .description
    text-align center
    margin 1em 0 0

  .margin-wrapper
    display block
    margin 0 auto
    max-width 1000px
    min-width 50%
    position relative

div.image-container
  h2
    font-style italic

  div.img
    display inline-block
    position relative

    img
      max-height 100vh
      max-width 100%

      &:last-child
        left 0
        position absolute
        top 0

.button-container
  bottom 1em
  left auto
  right 1em
  position fixed
  top auto

  a
    border-left 20px solid transparent
    border-right 20px solid transparent
    cursor pointer
    display block
    height 0
    margin 1em 0
    width 0

    &.up
      border-bottom 20px solid $button-background-color
    &.down
      border-top 20px solid $button-background-color

@media (min-width 400)
  section
    &:nth-child(even)
      div.img
        float left
      .description
        float right
    &:nth-child(odd)
      div.img
        float right
      .description
        float left
